@startuml
Skinparam groupInheritance 2
skinparam backgroundColor #CFEFFA
namespace Commands #FFFEDB {

}
namespace Products #FFFEDB {
}


Class App {}
class CLI {}
class Products.Product  {
#id: int
#name:str
#price: double
}
enum Products.ProductType{
REUNIONES
COMIDACAMPUS
PRODUCTBASIC
}
Product --> ProductType

class ProductHandler {
-products:arrayList<Product>
}

class Ticket{
-products:arrayList<Product>
}

enum State{
EMPTY
ACTIVE
CLOSED
}

Ticket ..>State

class TicketHandler {
-ticket : Ticket
}

Product --o Ticket
TicketHandler --o Ticket



class Products.ProductBasic{

-id: int
-name:str
-category:Category
-price:double
}

enum Products.Category {
MERCH
ELECTRONICA
PAPELERIA
ROPA
LIBRO
}
ProductBasic -->Category
Product <|-- ProductBasic

class Products.ProductPers{

-id:int
-name:str
-category:Category
-price:double
-texts:ArrayList<Str>
}
ProductBasic <|--  ProductPers

class Products.ComidaCampus{
-maxParticipantes:100
-MINTIME:72
}


class Products.Reuniones{
-maxParticipantes:100
-MINTIME:12
}

Product <|-- ComidaCampus
Product <|-- Reuniones

class UserHandler{
-Users:ArrayList<User>
}

abstract class User<<abstract>> {
}
UserHandler o-- User

class Client {
-id
-name
-dni
-mail
-cajero:Cajero
}

User <|-- Client

class Cashier{
-code:str
-name
-mail
}
User <|-- Cashier

Ticket --* Cashier
Client --o Ticket


abstract class Commands.Command <<abstract>>{
#name:Str
+{abstract}apply(args:String[])
}

class Commands.CommandProd{
+ apply(args : String[])
}

class Commands.CommandProdEx{
 + apply(args : String[])
}
CommandProdEx --*CommandProd
CommandProd --> CommandProdEx

class Commands.CommandTicket{
+ apply(args : String[])
}

class Commands.CommandTicketEx{
 + apply(args : String[])
}
CommandTicketEx --*CommandTicket
CommandTicket --> CommandTicketEx


class Commands.CommandUser{
+ apply(args : String[])
}

class Commands.CommandUserEx{
 + apply(args : String[])
}

CommandUserEx --*CommandUser
CommandUser --> CommandUserEx

App --* CLI

App --* Command
Command <|-- CommandProdEx
Command <|-- CommandProd
Command <|-- CommandTicket
Command <|-- CommandTicketEx
Command <|-- CommandUser
Command <|-- CommandUserEx

App --> ProductHandler

ProductHandler --o Product


App --> TicketHandler
App --> UserHandler

CommandUserEx .[norank].> UserHandler
CommandProdEx .[norank].> ProductHandler
CommandTicketEx .[norank].> TicketHandler

@enduml